import { RemixiconComponentType } from "@remixicon/react";
import Link from "next/link";

interface Props {
  Icon: RemixiconComponentType;
  isDisabled?: boolean;
}

export default function ButtonSocial({ Icon, isDisabled }: Props) {
  return (
    <Link
      href="#"
      className={`p-2 rounded hover:bg-neutral-50 focus:ring focus:ring-indigo-200 focus:outline-none ${isDisabled ? "pointer-events-none" : ""}`}
      tabIndex={isDisabled ? -1 : 0}
    >
      <Icon className="w-5 h-5 fill-indigo-700" />
    </Link>
  );
}
